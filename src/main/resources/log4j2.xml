<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
    <appenders>
        <File name="Information" fileName="logs/error.log" immediateFlush="true">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
        <File name="send" fileName="logs/send_phrase.log" immediateFlush="true">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </appenders>
    <loggers>
        <Logger name="send" level="info" additivity="false">
            <appender-ref ref="send" level="info"/>
        </Logger>
        <root level="info">
            <appender-ref ref="information" level="info"/>
        </root>
    </loggers>
</configuration>